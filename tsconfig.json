{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@layout/*": ["src/layout/*"],
      "@layout": ["src/layout"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      "@lib/*": ["src/lib/*"],
      "@components/icons/*": ["src/components/icons/*"],
      "@components/icons": ["src/components/icons"],
      "@definitions/*": ["src/definitions/*"],
      "@definitions": ["src/definitions"],
      "@redux/*": ["src/redux/*"],
      "@redux": ["src/redux"],
      "@public/*": ["public/*"],
      "@public": ["public"],
      "@test/*": ["test/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces/index.ts"]
    },
    "plugins": [
      {
        "name": "@twind/typescript-plugin"
      }
    ],
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["studio", "node_modules", "test/*"]
}
